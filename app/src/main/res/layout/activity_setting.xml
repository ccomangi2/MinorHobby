<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    android:orientation="vertical"
    tools:context=".ui.setting.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="42dp"
            android:layout_height="37dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/title"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:fontFamily="@font/regular"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/proflie"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/shadow"
                android:padding="6dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/name"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/local_situation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/local"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/profile_modify"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/button"
            android:fontFamily="@font/midium"
            android:gravity="center_vertical"
            android:stateListAnimator="@null"
            android:text="@string/proflie"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/push_notification"
            android:layout_width="379dp"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:checked="true"
            android:fontFamily="@font/midium"
            android:gravity="center_vertical"
            android:showText="true"
            android:stateListAnimator="@null"
            android:switchMinWidth="0dp"
            android:text="@string/push"
            android:textOff=""
            android:textOn=""
            android:textSize="18sp"
            android:thumb="@drawable/switch_thumb"
            android:thumbTextPadding="15dp"
            android:track="@drawable/switch_track_selector" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <Button
            android:id="@+id/updata_guide"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/button"
            android:fontFamily="@font/midium"
            android:gravity="center_vertical"
            android:stateListAnimator="@null"
            android:text="@string/updata"
            android:textSize="18sp" />

        <Button
            android:id="@+id/hobbie_tag_add"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/button"
            android:fontFamily="@font/midium"
            android:gravity="center_vertical"
            android:stateListAnimator="@null"
            android:text="@string/tag"
            android:textSize="18sp" />

        <Button
            android:id="@+id/service_check_guide"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:drawableEnd="@drawable/button"
            android:fontFamily="@font/midium"
            android:gravity="center_vertical"
            android:stateListAnimator="@null"
            android:text="@string/service"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <Button
            android:id="@+id/open_source_license"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/button"
            android:fontFamily="@font/midium"
            android:gravity="center_vertical"
            android:stateListAnimator="@null"
            android:text="@string/open"
            android:textSize="18sp" />

        <Button
            android:id="@+id/privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/button"
            android:fontFamily="@font/midium"
            android:gravity="center_vertical"
            android:stateListAnimator="@null"
            android:text="@string/user"
            android:textSize="18sp" />

        <Button
            android:id="@+id/company_information"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableEnd="@drawable/button"
            android:fontFamily="@font/midium"
            android:gravity="center_vertical"
            android:stateListAnimator="@null"
            android:text="@string/office"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/version"
                android:layout_width="36dp"
                android:layout_height="59dp"
                android:layout_marginStart="20dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/midium"
                android:gravity="center_vertical"
                android:stateListAnimator="@null"
                android:text="@string/version"
                android:textColor="#000000"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vs"
                android:fontFamily="@font/midium"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>